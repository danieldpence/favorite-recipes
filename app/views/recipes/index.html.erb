<section class="container mx-auto px-6 pt-8 lg:px-0">
  <h2 class="font-semibold text-2xl mb-4">All Recipes</h2>
  <ul class="md:grid grid-cols-3 gap-6">
    <% @recipes.each do |recipe| %>
      <li class="mb-6">
        <div class="bg-white shadow-lg rounded-lg overflow-hidden">
          <% url = recipe.image.attached? ? url_for(recipe.image) : image_url('placeholderimage.jpg') %>
          <div class="bg-cover bg-center h-48" style="background-image: url(<%= url %>)"></div>
          
          <div class="px-4 py-8">
            <h3 class="text-2xl mb-4"><%= recipe.name %></h3>
            <p class="text-base mb-4"><%= recipe.description %></p>
            <div class="mb-4">
              <p class="mr-2 block"><span class="font-semibold">Feeds: </span><%= recipe.feeds %></p>
              <p class="block"><span class="font-semibold">Prep Time <small>(approx.)</small>: </span><%= recipe.time_to_prepare %></p>
            </div>
            
            <div class="text-right">
              <%= link_to "Moreâ†’", recipe, class: "btn" %>
            </div>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</section>
