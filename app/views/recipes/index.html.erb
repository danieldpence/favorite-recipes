<section class="container mx-auto px-6 pt-8 lg:px-0">
  <h2 class="font-semibold text-2xl mb-4">All Recipes</h2>
  <ul class="flex flex-wrap -mx-6">
    <% @recipes.each do |recipe| %>
      <li class="w-full sm:w-1/2 md:w-1/3 px-6 mb-8">
        <div class="bg-white shadow-lg rounded-lg overflow-hidden">
          <%= image_tag("https://lorempixel.com/1000/800/food", class: "") %>

          <div class="px-4 py-8">
            <h3 class="text-2xl mb-4"><%= recipe.name %></h3>
            <p class="text-base mb-4"><%= recipe.description %></p>
            <div class="mb-4">
              <p class="mr-2 block"><span class="font-semibold">Feeds: </span><%= recipe.feeds %></p>
              <p class="block"><span class="font-semibold">Prep Time <small>(approx.)</small>: </span><%= recipe.time_to_prepare %></p>
            </div>
            
            <div class="text-right">
              <%= link_to "Moreâ†’", recipe, class: "inline-block bg-blue-800 hover:bg-blue-900 text-white font-bold py-2 px-4 border border-blue-900 rounded" %>
            </div>
          </div>
        </div>
      <li>
    <% end %>
  </ul>
</section>
